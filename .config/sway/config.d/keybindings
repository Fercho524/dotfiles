# SESSION CONTROL
bindsym $mod+Shift+r reload
bindsym $mod+Shift+q exit

# SINGLE WINDOW CONTROL
bindsym $mod+w kill
floating_modifier $mod
bindsym $mod+f floating toggle
bindsym $mod+F11 fullscreen toggle

# FOCUS WINDOW
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# REZIZE MODE
bindsym $mod+r mode "resize"

mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# MOVE FOCUSED WINDOW
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# OPEN A NEW COLUMN
bindsym $mod+c split h

# OPEN A NEW ROW
bindsym $mod+v split v

# LAYOUTS
bindsym $mod+Shift+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+o layout toggle split
bindsym $mod+g layout toggle split


####################################################################################


# APPS
bindsym $mod+Return exec kitty
bindsym $mod+e exec nautilus

# UTILITIES
bindsym $mod+p ~/.bin/colorpicker.sh

# SCREENSHOTS
bindsym $mod+Print exec bash ~/.bin/screenshot.sh full-save
bindsym Print exec bash ~/.bin/screenshot.sh area-save 
bindsym $mod+F6 exec wlsunset -T 4500

# APPLETS
bindsym $mod+m exec ~/.config/rofi/launchers/launcher.sh drun
bindsym $mod+x exec ~/.config/rofi/applets/bin/powermenu.sh
bindsym $mod+Tab exec ~/.config/rofi/launchers/launcher.sh window
bindsym $mod+Shift+m exec ~/.config/rofi/launchers/launcher.sh run
bindsym $mod+Shift+f exec ~/.config/rofi/launchers/launcher.sh filebrowser

# BRIGHTNESS
bindsym XF86MonBrightnessUp exec brightnessctl set +1%
bindsym XF86MonBrightnessDown exec brightnessctl set 1%-

# AUDIO 
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume  @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume  @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute  @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute  @DEFAULT_SOURCE@ toggle


####################################################################################


# WORKSPACES NAMES
set $ws1  "1:    " 
set $ws2  "2:  󰂺  "
set $ws3  "3:    "
set $ws4  "4:    "
set $ws5  "5:    "
set $ws6  "6:  󰎁  "
set $ws7  "7:    "
set $ws8  "8:    "
set $ws9  "9:    "

# SWITCH TO WORKSPACE
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# MOVE FOCUSED TO WORKSPACE
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# SWITCH BETWEEN PREVIUS AND NEXT WORLSPACE
bindsym $mod+Next workspace next
bindsym $mod+Prior workspace prev